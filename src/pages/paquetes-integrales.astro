---
import Layout from "../layouts/BaseLayout.astro";

const paquetesIntegrales = [
  {
    titulo: "Básico Virtual",
    precio: "S/ 650",
    periodo: "/mensuales",
    caracteristicas: [
      "Modalidad: Virtual completa",
      "Tecnología: CP.360° + Implementación",
      "Control de producción básico",
      "Gestión de tareas",
      "Reportes de campos",
      "Ayuda para Presupuesto Meta",
      "Capacitación virtual del equipo"
    ],
    boton: "Contratar Ahora",
    destacado: false
  },
  {
    titulo: "Profesional No Presencial",
    precio: "S/ 3500",
    periodo: "/mensuales",
    caracteristicas: [
      "Modalidad: No Presencial",
      "Tecnología: WARIS + CP.360° + Power BI",
      "Presupuesto Meta completo con WARIS",
      "Programación avanzada de obra",
      "Control de Producción Integral",
      "Dashboards ejecutivos con Power BI",
      "Coordinación virtual con administración",
      "Coordinación con almacén y producción",
      "Licencia para almacenero + capacitación"
    ],
    boton: "Solicitar Propuesta",
    destacado: true
  },
  {
    titulo: "Enterprise Presencial",
    precio: "S/ 6000",
    periodo: "/mensuales",
    caracteristicas: [
      "Modalidad: Presencial en obra",
      "Tecnología: Suite completa WARIS + CP.360° + Power BI",
      "Presupuesto Meta profesional",
      "Programación detallada de proyecto",
      "Control de Producción presencial",
      "Análisis de resultados con Power BI",
      "Coordinación presencial con administración",
      "Gestión integral de almacén y producción",
      "Capacitación presencial completa",
      "Consultoría especializada en obra"
    ],
    boton: "Contactar Especialista",
    destacado: false
  }
];
---

<Layout
  title="Paquetes de Servicios Integrales - CP.360°"
  description="Soluciones completas con implementación, capacitación y soporte especializado"
>

  <!-- Hero Section -->
  <section class="bg-white py-20">
    <div class="max-w-7xl mx-auto px-4">
      <div class="text-center mb-12">
        <h1 class="text-4xl md:text-6xl font-bold pb-5 text-gray-800" data-aos="fade-up">
          Paquetes de Servicios Integrales
        </h1>
        <p class="text-lg md:text-xl font-semibold py-5 text-gray-600" data-aos="fade-up" data-aos-delay="100">
          Soluciones completas con implementación, capacitación y soporte especializado
        </p>
        <div class="max-w-3xl mx-auto">
          <p class="text-gray-700 leading-relaxed" data-aos="fade-up" data-aos-delay="200">
            Nuestros paquetes integrales incluyen no solo el software, sino también la implementación 
            completa, capacitación de tu equipo y soporte especializado para maximizar el éxito de tu proyecto.
          </p>
        </div>
      </div>

      <!-- Grid de tarjetas de precios -->
      <div class="grid md:grid-cols-3 gap-8 max-w-6xl mx-auto mt-12" data-aos="fade-up" data-aos-delay="300">
        {paquetesIntegrales.map((paquete) => (
          <div class={`bg-white rounded-2xl shadow-lg h-fit border-2 border-transparent hover:border-primary transition-all duration-700 ease-in-out hover:shadow-2xl overflow-hidden relative ${paquete.destacado ? 'ring-2 ring-red-500 scale-105' : ''}`}>
            {paquete.destacado && (
              <div class="absolute top-2 z-20 left-1/2 transform -translate-x-1/2 ">
                <span class="bg-primary text-white text-xs font-bold px-4 py-1 rounded-full shadow-l uppercase tracking-wide">
                  Calidad Precio
                </span>
              </div>
            )}

            <div class="px-6 pb-6 mt-10">
              <h3 class="text-xl font-bold text-gray-800 text-center mb-4">
                {paquete.titulo}
              </h3>
              
              <div class="text-center mb-4">
                <span class="text-5xl font-bold text-red-600">{paquete.precio}</span>
                <span class="text-gray-600 ml-2">{paquete.periodo}</span>
              </div>

              <!-- Lista de características -->
              <div class="space-y-3 mb-8">
                {paquete.caracteristicas.map((caracteristica, index) => (
                  <div class={`flex items-center gap-3 py-2 ${index < paquete.caracteristicas.length - 1 ? 'border-b border-gray-100' : ''}`}>
                    <div class="w-5 h-5 bg-red-600 rounded-full flex items-center justify-center flex-shrink-0">
                      <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M9 16.17L4.83 12L3.41 13.41L9 19L21 7L19.59 5.59L9 16.17Z"/>
                      </svg>
                    </div>
                    <span class="text-gray-700 text-sm">{caracteristica}</span>
                  </div>
                ))}
              </div>

              <a href={`https://wa.me/51971419928?text=Hola, quiero saber más sobre el paquete ${encodeURIComponent(paquete.titulo)} ${encodeURIComponent(paquete.precio)} ${encodeURIComponent(paquete.periodo)}`}
  target="_blank"
  rel="noopener noreferrer"
>
              <button 
                class={`paquete-btn w-full py-4 px-6 border border-primary mb-5 rounded-full text-primary font-bold text-lg transition-all duration-300 ${
                  paquete.destacado 
                    ? 'bg-white shadow-2xl hover:translate-y-[-2px] cursor-pointer' 
                    : 'bg-white shadow-2xl hover:translate-y-[-2px] cursor-pointer'
                }`}
              >
                {paquete.boton}
              </button>
                </a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Información adicional -->
  <section class="bg-[#fef2f2] py-20">
    <div class="max-w-7xl mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-800 mb-6">
          ¿Qué incluyen nuestros servicios integrales?
        </h2>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8 max-w-6xl mx-auto">
        <div class="text-center" data-aos="fade-up" data-aos-delay="100">
          <div class="w-16 h-16 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-bold text-gray-800 mb-3">Implementación</h3>
          <p class="text-gray-600 text-sm">Configuración completa del sistema según tus necesidades</p>
        </div>
        
        <div class="text-center" data-aos="fade-up" data-aos-delay="200">
          <div class="w-16 h-16 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
            </svg>
          </div>
          <h3 class="text-lg font-bold text-gray-800 mb-3">Capacitación</h3>
          <p class="text-gray-600 text-sm">Entrenamiento completo de tu equipo</p>
        </div>
        
        <div class="text-center" data-aos="fade-up" data-aos-delay="300">
          <div class="w-16 h-16 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M12 2.25a9.75 9.75 0 100 19.5 9.75 9.75 0 000-19.5z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-bold text-gray-800 mb-3">Soporte</h3>
          <p class="text-gray-600 text-sm">Asistencia técnica especializada</p>
        </div>
        
        <div class="text-center" data-aos="fade-up" data-aos-delay="400">
          <div class="w-16 h-16 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
            </svg>
          </div>
          <h3 class="text-lg font-bold text-gray-800 mb-3">Consultoría</h3>
          <p class="text-gray-600 text-sm">Asesoría especializada en optimización</p>
        </div>
      </div>
    </div>
  </section>
</Layout>
