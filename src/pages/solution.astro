---
import Layout from '../layouts/BaseLayout.astro';

const estadisticas = [
  {
    valor: "20%",
    descripcion: "Reducción en sobrecostos."
  },
  {
    valor: "25%",
    descripcion: "Menos tiempo administrativo."
  },
  {
    valor: "15%",
    descripcion: "Aumento de productividad."
  },
  {
    valor: "100%",
    descripcion: "Trazabilidad completa."
  }
];

const filosofias = [
  {
    icono: "https://img.icons8.com/?size=80&id=tCS6sn7fK8A1&format=png",
    titulo: "El Control Nace en Campo",
    descripcion: [
      "No en la oficina. Los capataces registran directamente desde obra con dispositivos móviles. Información inmediata, sin intermediarios.",
    ],
  },
  {
    icono: "https://img.icons8.com/?size=80&id=j9hnALEs8TrH&format=png",
    titulo: "Cultura de Mejora Continua",
    descripcion: [
      "Cada día cuenta, cada persona importa. Fomentar una cultura donde todos participan del control y se benefician de los resultados."
    ]
  },
  {
    icono: "https://img.icons8.com/?size=80&id=s0Gg2OHr0RtS&format=png",
    titulo: "Sistema de Incentivos",
    descripcion: [
      "Si rindes más con menos, puedes ser bonificado. Alinear objetivos: cuando la empresa gana, los trabajadores también ganan.",

    ]
  },
];

const resultados = [
  {
    valor: "20%",
    title: "Reducción en sobrecostos",
    descripcion: "Detecta desviaciones el mismo día y ajusta antes de que sea demasiado tarde."
  },
  {
    valor: "25%",
    title: "Menos tiempo administrativo",
    descripcion: "Dashboards automáticos, sin hojas infinitas. Más tiempo para lo que importa."
  },
  {
    valor: "15%",
    title: "Aumento de productividad",
    descripcion: "Mejor coordinación campo-oficina. Decisiones rápidas basadas en datos reales."
  },
  {
    valor: "100%",
    title: "Trazabilidad completa",
    descripcion: "Cada hora trabajada, cada material usado, cada decisión tomada queda registrada."
  }
]


---

<Layout 
  title="Solución - CP.360°" 
  description="La solución que estabas esperando para el control de producción en construcción"
>
  <section class="bg-[#575f6e] py-20">
    <div class="max-w-7xl mx-auto px-4">
      <h2 class="text-3xl md:text-5xl text-white font-bold pb-5 text-center" data-aos="fade-up">
        La Solución que Estabas Esperando
      </h2>
      <p class="text-lg md:text-xl py-5 text-gray-300 text-center" data-aos="fade-up">
        CP.360° - Control de Producción en Tiempo Real
      </p>
      <p class="text-lg text-gray-300 text-center max-w-4xl mx-auto mb-10" data-aos="fade-up" data-aos-delay="100">
        Imagínate saber CADA DÍA si estas ganando o perdiendo dinero. Imagínate tomar decisiones con datos en tiempo real. Imagínate tener el control total de tus proyectos en tiempo real.
      </p>
      <div class="grid md:grid-cols-2 gap-8 mt-10 place-items-center max-w-4xl mx-auto" data-aos="fade-up" data-aos-delay="200">
        {estadisticas.map(({ valor, descripcion }) => (
          <div class="bg-[#777e8a] hover:bg-white/50 transition-all duration-700 ease-in rounded-2xl shadow-lg p-8 flex flex-col items-center justify-center hover:shadow-2xl min-h-[220px] md:min-h-[260px] w-full cursor-pointer">
            <span class="text-5xl font-extrabold text-white mb-3">{valor}</span>
            <p class="text-white font-medium text-lg text-center">{descripcion}</p>
          </div>
        ))}
      </div>
    </div>
  </section>
  <section class="bg-white py-20">
    <div class="max-w-7xl mx-auto px-4">
      <h2 class="text-3xl md:text-5xl text-center font-bold pb-5" data-aos="fade-up">
        Filosofía 360° - Más que un Sistema
      </h2>
      <p class="text-lg md:text-xl py-5 text-gray-500 text-center" data-aos="fade-up" data-aos-delay="100">
        Una nueva forma de pensar en el control de construcción.
      </p>
      <div class="grid md:grid-cols-3 gap-8 mt-10 place-items-center p-4 md:p-0 max-w-5xl mx-auto cursor-pointer" data-aos="fade-up" data-aos-delay="200">
        {filosofias.map(({ icono, titulo, descripcion }) => (
          <div class="bg-white rounded-2xl shadow-lg p-8 flex flex-col items-center justify-center transition-all duration-300 hover:-translate-y-2 ease-in hover:shadow-2xl min-h-[260px] md:min-h-[400px] w-full border-t-4 border-primary">
            <img src={icono} alt="Icono" class="mx-auto mb-4" />
            <h3 class="text-lg md:text-2xl font-bold text-center mb-2">{titulo}</h3>
            <div>
              <p>{descripcion}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
  <section class="bg-white pb-20">
    <div class="max-w-7xl mx-auto px-4">
      <h2 class="text-3xl md:text-5xl text-center font-bold pb-5" data-aos="fade-up">
        Resultados que SÍ Importan
      </h2>
      <p class="text-lg md:text-xl py-5 text-gray-500 text-center" data-aos="fade-up" data-aos-delay="100">
        Lo que realmente lograrás con CP.360°
      </p>
      <div class="grid md:grid-cols-3 gap-8 mt-10 place-items-center p-4 md:p-0 max-w-5xl mx-auto" data-aos="fade-up" data-aos-delay="200">
        {resultados.map(({ valor, title, descripcion }) => (
          <div class="result-card">
            <div class="result-card-content">
              <span class="text-5xl font-extrabold mb-3">{valor}</span>
              <h3 class="text-lg md:text-xl font-bold text-center mb-2">{title}</h3>
              <p class="font-medium text-md text-center">{descripcion}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
</Layout>

<style>
  .result-card {
    background: linear-gradient(135deg, #dc2626 0%, #991b1b 100%);
    color: #fff;
    padding: 3rem 2rem;
    border-radius: 20px;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
    box-shadow: 0 4px 16px rgba(220, 38, 38, 0.10);
    min-height: 260px;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }
  @media (min-width: 768px) {
    .result-card {
      min-height: 320px;
    }
  }
  .result-card::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -50%;
    width: 100%;
    height: 200%;
    background: linear-gradient(45deg, transparent, rgba(255,255,255,0.1));
    transform: rotate(45deg);
    transition: all 0.6s ease;
    z-index: 1;
  }
  .result-card:hover::before {
    right: 100%;
  }
  .result-card:hover {
    transform: translateY(-10px) scale(1.05);
    box-shadow: 0 20px 40px rgba(220, 38, 38, 0.3);
  }
  .result-card-content {
    position: relative;
    z-index: 2;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
</style>
