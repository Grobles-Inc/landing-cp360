<section class="relative py-20 flex flex-col justify-center items-center text-center px-4 overflow-hidden" style="background: linear-gradient(to left, #a61d1d 0%, #d12525 100%);">

  <!-- Badge superior -->
  <div class="relative z-10 mb-8" data-aos="zoom-in">
    <div class="inline-flex items-center gap-2 bg-gradient-to-r from-primary-400 to-primary-600 px-6 py-3 rounded-full bg-white/30 animate-bounce-scale">
      <span class="text-2xl">🚀</span>
      <span class="text-white font-semibold text-lg uppercase tracking-wide">
        Oferta exclusiva de lanzamiento
      </span>
    </div>
  </div>

  <!-- Título principal -->
  <div class="relative z-10 my-6" data-aos="fade-up">
    <h1 class="text-5xl md:text-7xl font-black text-white mb-4">
      ¡Transforma tu Construcción <br> HOY Mismo!
    </h1>
  </div>

  <!-- Subtítulo -->
  <div class="relative z-10 mb-8" data-aos="fade-up">
    <h2 class="text-xl md:text-2xl text-white font-medium mb-6">
      Únete a las constructoras que ya controlan sus proyectos en tiempo real y nunca más trabajen a ciegas.
    </h2>
  </div>

  <!-- Preguntas/problemática -->
  <div class="relative z-10 mb-12 max-w-4xl" data-aos="fade-up">
    <p class="text-lg md:text-3xl font-bold text-white uppercase mb-4">
      ¡Primer proyecto completamente gratis!
    </p>
    <p class="text-lg md:text-xl text-white">
      Implementación desde S/. 399 (precio normal S/. 600)
    </p>
    <p class="text-lg mt-5 text-white">Sin compromisos a largo plazo. Cancela cuando quieras. Soporte incluido.</p>
  </div>

  <!-- Botones de acción -->
  <div class="relative z-10 flex flex-col sm:flex-row gap-6 items-center" data-aos="fade-up" data-aos-delay="100">
    <!-- Botón principal -->
    <button class="group bg-white text-primary-600 border-2 border-transparent px-8 py-4 cursor-pointer font-bold text-lg uppercase tracking-wide hover:bg-primary-50 transition-all duration-300 ease-in-out flex items-center gap-3 shadow-lg hover:shadow-2xl transform hover:-translate-y-1 rounded-full hover:bg-primary hover:text-white hover:border-white">
      <span class="text-2xl">🚀</span>
      <span class="text-primary group-hover:text-white">Llamar: 971 419 928</span>
    </button>

    <!-- Botón secundario -->
    <button class="group bg-primary border-2 border-white text-primary-600 px-8 py-4 cursor-pointer font-bold text-lg tracking-wide hover:bg-primary-50 transition-all duration-300 ease-in-out flex items-center gap-3 shadow-lg hover:shadow-2xl transform hover:-translate-y-1 rounded-full hover:bg-white text-white">
      <span class="text-xl">📊</span>
      <span class="group-hover:text-primary">Solicitar Demo Gratis</span>
    </button>
  </div>
</section>

<style>
  @keyframes bounce-scale {
    0%, 100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.06);
    }
  }
  .animate-bounce-scale {
    animation: bounce-scale 2.8s infinite cubic-bezier(0.4, 0, 0.2, 1);
  }
</style>
