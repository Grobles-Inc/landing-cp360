---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header>
	<nav class="bg-[#686f7d] relative">
		<div class="flex max-w-7xl items-center mx-auto justify-between py-6 px-4">
			<!-- Logo -->
			<div>
				<a href="/">
					<h1 class="text-3xl font-bold text-white">
						CP.360°
					</h1>
				</a>
			</div>

			<!-- Menu Desktop -->
			<div class="hidden lg:flex space-x-6 text-white font-bold">
				<HeaderLink href="/" class="hover:text-primary transition-all duration-300 ease-in-out">Inicio</HeaderLink>
				<HeaderLink href="/solution" class="hover:text-primary transition-all duration-300 ease-in-out">Solución</HeaderLink>
				<HeaderLink href="/caracteristicas" class="hover:text-primary transition-all duration-300 ease-in-out">Características</HeaderLink>
				
				<!-- Dropdown de Paquetes -->
				<div class="relative group">
					<button class="hover:text-primary transition-all duration-300 ease-in-out flex items-center gap-1">
						Paquetes
						<svg class="w-4 h-4 transition-transform duration-300 group-hover:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
						</svg>
					</button>
					
					<!-- Dropdown Menu -->
					<div class="absolute top-full left-0 mt-2 w-64 bg-white rounded-lg shadow-xl opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 ease-in-out transform translate-y-2 group-hover:translate-y-0 z-50">
						<div class="p-2">
							<a href="/paquetes-sistema" class="block px-4 py-3 rounded-lg text-gray-800 hover:bg-red-50 hover:text-primary transition-colors duration-200">
								<div class="font-semibold text-sm">Sistema CP.360°</div>
								<div class="text-xs text-gray-600 mt-1">Planes escalables del sistema</div>
							</a>
							<a href="/paquetes-integrales" class="block px-4 py-3 rounded-lg text-gray-800 hover:bg-red-50 hover:text-red-600 transition-colors duration-200">
								<div class="font-semibold text-sm">Servicios Integrales</div>
								<div class="text-xs text-gray-600 mt-1">Implementación y capacitación</div>
							</a>
						</div>
					</div>
				</div>
				
				<HeaderLink href="/contacto" class="hover:text-primary transition-all duration-300 ease-in-out">Contacto</HeaderLink>
			</div>

			<!-- Botón CTA Desktop -->
			<div class="hidden lg:block">
				<a href="/contacto">
					<button class="bg-primary text-white rounded-full px-5 shadow-md py-3 cursor-pointer hover:bg-[#991b1b] transition-all duration-300 font-bold ease-in-out hover:translate-y-[-2px] hover:shadow-red-900">
						Solicita una Demo Gratis
					</button>
				</a>
			</div>

			<!-- Botón Hamburguesa Mobile -->
			<div class="lg:hidden">
				<button 
					id="mobile-menu-button" 
					class="text-white focus:outline-none focus:text-primary transition-colors duration-300"
					aria-label="Abrir menú de navegación"
				>
					<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
					</svg>
				</button>
			</div>
		</div>

		<!-- Menu Mobile Overlay -->
		<div 
			id="mobile-menu" 
			class="lg:hidden fixed inset-0 bg-black bg-opacity-50 z-50 hidden"
		>
			<div class="fixed right-0 top-0 h-full w-80 bg-[#686f7d] shadow-xl transform translate-x-full transition-transform duration-300 ease-in-out">
				<!-- Header del menú móvil -->
				<div class="flex items-center justify-between p-6 border-b border-white/20">
					<h2 class="text-2xl font-bold text-white">CP.360°</h2>
					<button 
						id="mobile-menu-close" 
						class="text-white hover:text-primary transition-colors duration-300"
						aria-label="Cerrar menú"
					>
						<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
						</svg>
					</button>
				</div>

				<!-- Links del menú móvil -->
				<div class="py-6">
					<a href="/" class="block px-6 py-4 text-white font-bold hover:bg-white/10 hover:text-primary transition-all duration-300">
						Inicio
					</a>
					<a href="/solution" class="block px-6 py-4 text-white font-bold hover:bg-white/10 hover:text-primary transition-all duration-300">
						Solución
					</a>
					<a href="/caracteristicas" class="block px-6 py-4 text-white font-bold hover:bg-white/10 hover:text-primary transition-all duration-300">
						Características
					</a>
					
					<!-- Dropdown móvil de Paquetes -->
					<div class="px-6">
						<button 
							id="mobile-packages-toggle" 
							class="flex items-center justify-between w-full py-4 text-white font-bold hover:text-primary transition-all duration-300"
						>
							Paquetes
							<svg id="mobile-packages-arrow" class="w-4 h-4 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
							</svg>
						</button>
						
						<!-- Submenu móvil de Paquetes -->
						<div id="mobile-packages-submenu" class="hidden ml-4 space-y-2">
							<a href="/paquetes#sistema" class="block py-2 text-white/80 hover:text-primary transition-colors duration-300">
								<div class="font-semibold text-sm">Sistema CP.360°</div>
								<div class="text-xs text-white/60 mt-1">Planes escalables del sistema</div>
							</a>
							<a href="/paquetes#integrales" class="block py-2 text-white/80 hover:text-primary transition-colors duration-300">
								<div class="font-semibold text-sm">Servicios Integrales</div>
								<div class="text-xs text-white/60 mt-1">Implementación y capacitación</div>
							</a>
						</div>
					</div>
					
					<a href="/contacto" class="block px-6 py-4 text-white font-bold hover:bg-white/10 hover:text-primary transition-all duration-300">
						Contacto
					</a>
				</div>

				<!-- Botón CTA Mobile -->
				<div class="px-6 py-4">
					<a href="/contacto" class="block">
						<button class="w-full bg-primary text-white rounded-full px-5 shadow-md py-3 cursor-pointer hover:bg-[#991b1b] transition-all duration-300 ease-in-out font-bold">
							Solicita una Demo Gratis
						</button>
					</a>
				</div>
			</div>
		</div>
	</nav>
</header>

<script>
	document.addEventListener('DOMContentLoaded', function() {
		const mobileMenuButton = document.getElementById('mobile-menu-button');
		const mobileMenu = document.getElementById('mobile-menu');
		const mobileMenuClose = document.getElementById('mobile-menu-close');
		const mobileMenuPanel = mobileMenu?.querySelector('div');

		const mobilePackagesToggle = document.getElementById('mobile-packages-toggle');
		const mobilePackagesSubmenu = document.getElementById('mobile-packages-submenu');
		const mobilePackagesArrow = document.getElementById('mobile-packages-arrow');

		function openMenu() {
			if (mobileMenu && mobileMenuPanel) {
				mobileMenu.classList.remove('hidden');
				setTimeout(() => {
					mobileMenuPanel.classList.remove('translate-x-full');
				}, 10);
				document.body.style.overflow = 'hidden';
			}
		}

		function closeMenu() {
			if (mobileMenu && mobileMenuPanel) {
				mobileMenuPanel.classList.add('translate-x-full');
				setTimeout(() => {
					mobileMenu.classList.add('hidden');
				}, 300);
				document.body.style.overflow = '';
			}
		}

		function togglePackagesSubmenu() {
			if (mobilePackagesSubmenu && mobilePackagesArrow) {
				mobilePackagesSubmenu.classList.toggle('hidden');
				mobilePackagesArrow.classList.toggle('rotate-180');
			}
		}

		mobileMenuButton?.addEventListener('click', openMenu);
		mobileMenuClose?.addEventListener('click', closeMenu);
		mobilePackagesToggle?.addEventListener('click', togglePackagesSubmenu);

		mobileMenu?.addEventListener('click', function(e) {
			if (e.target === mobileMenu) {
				closeMenu();
			}
		});

		document.addEventListener('keydown', function(e) {
			if (e.key === 'Escape' && !mobileMenu?.classList.contains('hidden')) {
				closeMenu();
			}
		});

		const mobileLinks = mobileMenu?.querySelectorAll('a');
		mobileLinks?.forEach(link => {
			link.addEventListener('click', closeMenu);
		});
	});
</script>
